  cursor: pointer;

  transform: rotate(var(--rot)) scale(1);
  transition:
    transform 0.6s cubic-bezier(.22,.61,.36,1),
    box-shadow 0.6s ease,
    width 0.6s ease,
    height 0.6s ease;

  opacity: 0;
  animation: fadeIn 0.8s ease forwards;
}

