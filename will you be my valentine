<body>

  <div class="card">
    <h1>Ishika, will you be my Valentine? ðŸ’˜</h1>
    <div class="buttons">
      <button id="yes">YES</button>
      <button id="no">NO</button>
    </div>
  </div>

<script>
  const noBtn = document.getElementById("no");
  const yesBtn = document.getElementById("yes");

  let yesScale = 1;

  // Track NO position
  let offsetX = 0;
  let offsetY = 0;

  // Texts for NO button
  const noTexts = [
    "NO",
    "Think again",
    "Wrong answer",
    "Nice try",
    "Be serious",
    "You know the answer",
    "Try YES ðŸ‘€"
  ];

  let noClickCount = 0;

  function moveNoSmoothly() {
    const rect = noBtn.getBoundingClientRect();

    const maxStep = 90; // ðŸ”½ slowed movement (was 120)
    const padding = 20;

    let dx = (Math.random() * maxStep * 2) - maxStep;
    let dy = (Math.random() * maxStep * 2) - maxStep;

    offsetX += dx;
    offsetY += dy;

    const minX = -rect.left + padding;
    const maxX = window.innerWidth - rect.right - padding;
    const minY = -rect.top + padding;
    const maxY = window.innerHeight - rect.bottom - padding;

    offsetX = Math.max(minX, Math.min(maxX, offsetX));
    offsetY = Math.max(minY, Math.min(maxY, offsetY));

    // Store current position for shake animation
    noBtn.style.setProperty("--x", offsetX + "px");
    noBtn.style.setProperty("--y", offsetY + "px");

    noBtn.style.transform = `translate(${offsetX}px, ${offsetY}px)`;

    // YES grows slightly
    yesScale += 0.08; // ðŸ”½ gentler growth
    yesBtn.style.transform = `scale(${yesScale})`;
  }

  // Hover = dodge (slower, smoother)
  noBtn.addEventListener("mouseenter", moveNoSmoothly);
  noBtn.addEventListener("touchstart", moveNoSmoothly);

  // Click = shake + text change + dodge
  noBtn.addEventListener("click", () => {
    noClickCount++;
    noBtn.textContent = noTexts[noClickCount % noTexts.length];

    noBtn.classList.remove("no-shake");
    void noBtn.offsetWidth; // force reflow so animation restarts
    noBtn.classList.add("no-shake");

    moveNoSmoothly();
  });

  // Floating hearts
  setInterval(() => {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.innerText = "ðŸ’—";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.fontSize = Math.random() * 18 + 14 + "px";
    heart.style.animationDuration = Math.random() * 3 + 5 + "s";
    document.body.appendChild(heart);
    setTimeout(() => heart.remove(), 8000);
  }, 450);

yesBtn.onclick = () => {
  document.body.innerHTML = "";

  const page2 = document.createElement("div");
  page2.className = "page2";
  document.body.appendChild(page2);

  const overlay = document.createElement("div");
  overlay.className = "page2-overlay";
  overlay.innerHTML = `
    <h1>I Love You, Shikuuuuuu ðŸ’– </h1>
    <p>
      Every photo here is a memory.<br>
      Hover to see it the way it really is.
      MUAHHHHHHHHHHHHHH...
    </p>
  `;
  document.body.appendChild(overlay);

  const cols = 5;
  const rows = 5;
  const padding = 120;
  const jitter = 35;

  const cellW = (window.innerWidth - padding * 2) / cols;
  const cellH = (window.innerHeight - padding * 2) / rows;

  let index = 1;

  for (let r = 0; r < rows; r++) {
    for (let c = 0; c < cols; c++) {
      if (index > 25) break;

      const img = document.createElement("img");
      img.src = `photos/${index}.jpg`;
      img.alt = "memory";

      img.onload = () => {
        const baseWidth = Math.random() * 70 + 230;
        const aspect = img.naturalHeight / img.naturalWidth;

        const x =
          padding +
          c * cellW +
          (cellW - baseWidth) / 2 +
          (Math.random() * jitter - jitter / 2);

        const y =
          padding +
          r * cellH +
          (cellH - baseWidth * aspect) / 2 +
          (Math.random() * jitter - jitter / 2);

        const rot = Math.random() * 8 - 4;

        img.style.width = `${baseWidth}px`;
        img.style.height = `${baseWidth * aspect}px`;
        img.style.left = `${x}px`;
        img.style.top = `${y}px`;
        img.style.setProperty("--rot", `${rot}deg`);
      };

      img.onerror = () => img.remove();
      page2.appendChild(img);
      index++;
    }
  }
};



</script>

</body>
</html>
